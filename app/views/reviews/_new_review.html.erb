  <div id="review_form_errors">
    <%= render partial: '/reviews/review_form_errors' %>
  </div>

  
    <div class="field">
    <%= f.label :content %><br> 
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

<% end %>
 
